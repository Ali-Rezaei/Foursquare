<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.sample.android.cafebazaar.ui.MainFragment"
        tools:layout="@layout/fragment_main" android:label="@string/app_name">
        <action android:id="@+id/action_mainFragment_to_detailFragment" app:destination="@id/detailFragment"/>
    </fragment>
    <fragment android:id="@+id/detailFragment" android:name="com.sample.android.cafebazaar.ui.DetailFragment"
        android:label="fragment_detail" tools:layout="@layout/fragment_detail">
        <argument android:name="category" app:argType="com.sample.android.cafebazaar.domain.Category"/>
    </fragment>

</navigation>